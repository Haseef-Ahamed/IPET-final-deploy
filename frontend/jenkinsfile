pipeline {
    agent any
    tools {
        nodejs 'NodeJS25' 
    }

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-21-openjdk-amd64'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
        SCANNER_HOME = tool 'sonar-scanner'
        WORKDIR = 'frontend'
    }

    stages {
        stage('Hello') {
            steps {
                sh 'node --version'
                sh 'npm --version'
                echo "Hello from Node!"
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Haseef-Ahamed/IPET-final-deploy.git'
                // checkout scm
                echo "Code Checkout Completed"
            }
        }

        stage('Clean and Install Dependencies') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm ci'
                    echo "Completly Clear the Existed node_modules and Install Fresh Dependencies"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                    dir("${WORKDIR}") {
                        sh ''' ${SCANNER_HOME}/bin/sonar-scanner -Dsonar.url=http://192.168.56.1:9000/ -Dsonar.login=squ_7d82ee77b1840759e95f1716f85763e971470ce2 -Dsonar.ProjectName=IPET-Frontend \
                        -Dsonar.nodejs.binary=. \
                        -Dsonar.projectKey=IPET-Frontend '''
                    }
                }
            }

      
    }
}

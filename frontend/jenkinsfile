pipeline {
    agent any
    tools {
        nodejs 'NodeJS 25.1.0' 
    }

    environment {
        SCANNER_HOME = tool  'sonar-scanner'
        WORKDIR = 'frontend'
    }

    stages {
        stage('Checkout') {
            steps {
                // git branch: 'main', url: 'https://github.com/Haseef-Ahamed/IPET-final-deploy.git'
                checkout scm
            }
        }

        stage('Clean and Install Dependencies') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm ci'
                    echo "Completly Clear the Existed node_modules and Install Fresh Dependencies"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube Server') {
                    dir("${WORKDIR}") {
                        sh ''' ${SCANNER_HOME}/bin/sonar-scanner -Dsonar.url=http://192.168.56.1:9000/ -Dsonar.login=squ_17c64093de7844978c79875e7769690ec6070886 -Dsonar.ProjectName=IPET-Front \
                        -Dsonar.nodejs.binary=. \
                        -Dsonar.projectKey=IPET-Front '''
                    }
                }
            }
        }

        // stage('OWSAP Dependency Check and SCAN') {
        //     steps {
        //         dir("${WORKDIR}") {
        //             step([$class: 'DependencyCheckBuilder',
        //                 odcInstallation: 'DP',
        //                 additionalArguments: '--scan ./'
        //             ])
        //             step([$class: 'DependencyCheckPublisher',
        //                 pattern: '**/dependency-check-report.xml'
        //             ])
        //     //         DependencyCheck additionalArguments: '--scan ./', odcInstallation: 'DP'
        //     //         DependencyCheckPublisher pattern: '**/dependency-check-report.xml'
        //       }
        //     }
        // }

        stage('Lint') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm run lint || echo "Linting issues found"'
                    echo "Linting completed"
                }
            }
        }
        stage('Security Audit') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm audit --audit-level=high'
                }
            }
        }

        // stage('Test & Coverage') {
        //     steps {
        //         dir("${WORKDIR}") {
        //             sh 'npm test -- --watchAll=false --coverage'
        //         }
        //     }
        //     post {
        //         always {
        //             junit allowEmptyResults: true, testResults: "${WORKDIR}/coverage/junit.xml"
        //             publishHTML([reportDir: "${WORKDIR}/coverage", reportFiles: "lcov-report/index.html", reportName: "Frontend Coverage"])
        //         }
        //     }
        // }

        stage('Test') { 
            steps {
                dir("${WORKDIR}") {
                    sh 'npm test'
                }
            }
        }

        stage('Build') { 
            steps {
                dir("${WORKDIR}") {
                    sh 'npm run build'
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: "${WORKDIR}/dist/**", onlyIfSuccessful: true
                }
            }
        }

        stage('Build & Push Docker Image') { 
            steps {
                dir("${WORKDIR}") {
                    withDockerRegistry(credentialsId: '40a10175-3b5a-4b00-9bdc-2d3c5293ec4c', toolName: 'docker') { 
                        sh "docker build -t ipet-frontend:latest -f docker/Dockerfile ."
                        sh "docker tag ipet-frontend:latest hsfahd/ipet-frontend:latest"
                        sh "docker push hsfahd/ipet-frontend:latest"
                }
            }
        }
    
        
        }
    }
}

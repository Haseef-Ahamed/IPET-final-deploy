pipeline {
    tools {
        nodejs 'Node 18' 
    }

    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm ci'
                }
            }
        }

        stage('Lint') {
            steps {
                dir('frontend') {
                    sh 'npm run lint || echo "Linting issues found"'
                }
            }
        }
        
        stage('Build') { 
            steps {
                dir('frontend') {
                     sh 'npm install'
                    //  sh 'npm run build'
                }
            }
        }

        

        // stage('Test') { 
        //     steps {
        //         sh './jenkins/scripts/test.sh' 
        //     }
        // }
    }
}
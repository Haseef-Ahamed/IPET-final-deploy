pipeline {
    agent any
    tools {
        nodejs 'NodeJS25' 
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        WORKDIR = 'frontend'
    }

    stages {
        stage('Hello') {
            steps {
                sh 'node --version'
                sh 'npm --version'
                echo "Hello from Node!"
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Haseef-Ahamed/IPET-final-deploy.git'
                // checkout scm
                echo "Code Checkout Completed"
            }
        }

        stage('Clean and Install Dependencies') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm ci'
                    echo "Completly Clear the Existed node_modules and Install Fresh Dependencies"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-scanner') {
                    dir("${WORKDIR}") {
                        sh ''' ${SCANNER_HOME}/bin/sonar-scanner -Dsonar.url=http://192.168.56.1:9000/ -Dsonar.login=sqa_df4d86c4dc4e0f833d72c6967d30f920aa03be68 -Dsonar.ProjectName=IPET-Frontend \
                        -Dsonar.nodejs.binary=. \
                        -Dsonar.projectKey=IPET-Frontend '''
                    }
                }
            }
        }

        stage('Lint') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm run lint || echo "Linting issues found"'
                    echo "Linting completed"
                }
            }
        }

        stage('Security Audit') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm audit --audit-level=high'
                }
            }
        }

        stage('Test') { 
            steps {
                dir("${WORKDIR}") {
                    sh 'npm test'
                }
            }
        }

        stage('Build') { 
            steps {
                dir("${WORKDIR}") {
                    sh 'npm run build'
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: "${WORKDIR}/dist/**", onlyIfSuccessful: true
                }
            }
        }

        // stage('Build & Push Docker Image') { 
        //     steps {
        //         dir("${WORKDIR}") {
        //             withDockerRegistry(credentialsId: '1af1a62d-8790-4658-9c10-f0f19cbc0708', toolName: 'docker'){ 
        //                 sh "docker build -t ipet-frontend:latest -f docker/Dockerfile ."
        //                 sh "docker tag ipet-frontend:latest hsfahd/ipet-frontend:latest"
        //                 sh "docker push hsfahd/ipet-frontend:latest"
        //             }
        //         }
        //     }

      
        // }
    }
}

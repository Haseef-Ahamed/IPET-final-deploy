pipeline {
    agent any

    tools {
        nodejs 'NodeJS 25.1.0'
    }

    environment {
        WORKDIR = "frontend"
    }

    options {
        timeout(time: 15, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        ansiColor('xterm')
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm ci'
                }
            }
        }

        stage('Quality & Security (Parallel)') {
            parallel {
                stage('Lint') {
                    steps {
                        dir("${WORKDIR}") {
                            sh 'npm run lint'
                        }
                    }
                }
                stage('Security Audit') {
                    steps {
                        dir("${WORKDIR}") {
                            sh 'npm audit --audit-level=high'
                        }
                    }
                }
            }
        }

        stage('Test & Coverage') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm test -- --coverage --watchAll=false'
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: "${WORKDIR}/coverage/junit.xml"
                    publishHTML([reportDir: "${WORKDIR}/coverage", reportFiles: "lcov-report/index.html", reportName: "Coverage"])
                }
                unsuccessful {
                    echo 'Test or coverage failed‚Äîcheck logs or setup.'
                }
            }
        }

        stage('Build') {
            steps {
                dir("${WORKDIR}") {
                    sh 'npm run build'
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: "${WORKDIR}/dist/**", onlyIfSuccessful: true
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "CI Pipeline succeeded and workspace cleaned. üöÄ"
        }
        failure {
            echo "CI Pipeline failed after cleanup. ‚ùå"
        }
    }
}
